                card_view:cardCornerRadius="50dp"
                card_view:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/iv_imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/text_blue"
                     />
